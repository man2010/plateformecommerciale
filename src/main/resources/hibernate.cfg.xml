        <mapping resource="gestion/Client.hbm.xml"/>
        <mapping resource="gestion/Typecontrat.hbm.xml"/>
        <mapping resource="gestion/Collaborateur.hbm.xml"/>
        <mapping resource="gestion/Utilisateur.hbm.xml"/>
        <mapping resource="gestion/Journalactivite.hbm.xml"/>
