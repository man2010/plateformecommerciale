        <mapping resource="gestion/Varietesalaire.hbm.xml"/>
        <mapping resource="gestion/Pays.hbm.xml"/>
        <mapping resource="gestion/Contrat.hbm.xml"/>
        <mapping resource="gestion/Session.hbm.xml"/>
        <mapping resource="gestion/Horairetravail.hbm.xml"/>
        <mapping resource="gestion/Employe.hbm.xml"/>
        <mapping resource="gestion/Villes.hbm.xml"/>
        <mapping resource="gestion/Salaire.hbm.xml"/>
        <mapping resource="gestion/Compteutilisateur.hbm.xml"/>
        <mapping resource="gestion/Motif.hbm.xml"/>
        <mapping resource="gestion/Profile.hbm.xml"/>
